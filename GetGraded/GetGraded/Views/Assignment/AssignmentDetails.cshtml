@model AssignmentDetailsView
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #00a8db;
            font-family: Arial, sans-serif;
        }

        .column-container {
            display: flex;
            flex-direction: column;
            box-sizing: border-box;
            margin: 50px auto;
            padding: 50px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            width: 100%;
        }

        .assignment-name {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        .subtitle {
            font-size: 18px;
            font-weight: bold;
            margin: 20px 0 10px;
            color: #333;
        }

        .button-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .custom-button, .upload-button {
            background-color: #0056b3;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            cursor: pointer;
            border-radius: 8px;
            transition: background-color 0.3s;
        }

            .custom-button:hover, .upload-button:hover {
                background-color: #003d80;
            }

        .upload-button {
            background-color: #007bff;
        }

            .upload-button:hover {
                background-color: #0056b3;
            }

        .file-name {
            margin-top: 10px;
            font-size: 16px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 8px;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .invalid-feedback {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
</head>
<body>
    <div class="column-container">
        <div class="assignment-name">@Model.Name</div>
        <div class="subtitle">Requirements</div>
        <div>@Model.Description</div>

        @if (Model.Role == 2) // Student role
        {
            @if (!Model.IsCompleted)
            {
                <div class="subtitle">Add a Solution</div>
                @using (Html.BeginForm("UploadFile", "Assignment", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input type="file" name="file" style="display: none;" id="file-upload" onchange="updateFileName(this)" required />

                    @Html.HiddenFor(model => model.Id)
                    <div class="button-container">
                        <label for="file-upload" class="custom-button">Choose File</label>
                        <span id="file-name" class="file-name"></span>
                        <button type="submit" class="upload-button" id="upload-button" disabled>Upload</button>
                    </div>
                }
            }
            else
            {
                <div class="subtitle">Download Submitted Solution</div>
                @if (!string.IsNullOrEmpty(Model.PathFile))
                {
                    <div class="file-name">
                        Uploaded file: <a href="@Url.Action("DownloadFile", "Assignment", new { filePathName = Model.PathFile })" target="_blank">@System.IO.Path.GetFileName(Model.PathFile)</a>
                    </div>
                }
                else
                {
                    <div class="file-name">No file uploaded.</div>
                }

                <div class="subtitle">Assignment Score</div>
                <div class="form-group">
                    <label for="score" class="form-label">Score:</label>
                    <div>@(Model.Score > 0 ? Model.Score.ToString() : "Not available")</div>
                </div>
            }
        }
        else if (Model.Role == 1) // Teacher role
        {
            @if (Model.IsCompleted)
            {
                <div class="subtitle">Download Submitted Solution</div>
                @if (!string.IsNullOrEmpty(Model.PathFile))
                {
                    <div class="file-name">
                        Uploaded file: <a href="@Url.Action("DownloadFile", "Assignment", new { filePathName = Model.PathFile })" target="_blank">@System.IO.Path.GetFileName(Model.PathFile)</a>
                    </div>
                }
                else
                {
                    <div class="file-name">No file uploaded.</div>
                }
                <div class="subtitle">Assignment Score</div>
                <div class="form-group">
                    <label for="score" class="form-label">Score:</label>
                    <div>@Model.Score</div>
                </div>
            }
            else
            {
                <div class="subtitle">Download Submitted Solution</div>
                @if (!string.IsNullOrEmpty(Model.PathFile))
                {
                    <div class="file-name">
                        Uploaded file: <a href="@Url.Action("DownloadFile", "Assignment", new { filePathName = Model.PathFile })" target="_blank">@System.IO.Path.GetFileName(Model.PathFile)</a>
                    </div>
                }
                else
                {
                    <div class="file-name">No file uploaded.</div>
                }
                <div class="subtitle">Add Score</div>
                @using (Html.BeginForm("SubmitScore", "Assignment", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.AnswerId)
                    <div class="form-group">
                        <label for="score" class="form-label">Score:</label>
                        <input type="number" id="score" name="score" class="form-control" required min="1" max="100" />
                        <div class="invalid-feedback">Score must be between 1 and 100.</div>
                    </div>
                    <button type="submit" class="btn-primary">Submit Score</button>
                }
            }
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function updateFileName(input) {
            var fileName = input.files[0].name;
            document.getElementById('file-name').innerText = fileName;
            document.getElementById('upload-button').disabled = false; // Enable the upload button
        }

        $(document).ready(function () {
            $("#file-upload").change(function () {
                if ($(this).val()) {
                    $("#upload-button").prop("disabled", false);
                } else {
                    $("#upload-button").prop("disabled", true);
                }
            });
        });
    </script>
</body>
</html>
